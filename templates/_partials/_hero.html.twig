<div class="hero-scene text-center text-white position-relative">
    <!-- Image -->
    <img src="{{ hero_image | default(asset('images/hero-base.webp')) }}" 
        alt="{{ hero_alt | default('DÃ©couvrez notre univers animalier au Zoo Arcadia') }}" 
        class="img-fluid w-100 hero-img" 
        style="height: {{ hero_height | default('400px') }};">

    <!-- Overlay -->
    <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"></div>

    <!-- Contenu du texte -->
    <div class="hero-scene-content position-absolute top-50 start-50 translate-middle text-center">
        {% if intro_text is defined and intro_text != '' %} 
            <p class="fs-4">{{ intro_text }}</p>
        {% endif %}
        {% if title is defined and title != '' %}
            <h1 class="display-3 fw-bold">{{ title }}</h1> 
        {% endif %}
        {% if button_text is defined and button_link is defined %}
            <a href="{{ button_link }}" class="btn btn-primary btn-lg mt-3 text-white">{{ button_text }}</a>
        {% endif %}
    </div>
</div>





