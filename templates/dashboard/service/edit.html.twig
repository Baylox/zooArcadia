{% extends 'base.html.twig' %}

{% block title %}Modifier le Service{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center display-6 mb-4 text-primary">Modifier le Service</h1>

            {# Afficher l'image actuelle si elle existe #}
            {% if service.images|length > 0 %}
                <div class="d-flex flex-column align-items-center mb-4">
                    <img src="/uploads/services_image/{{ service.images|first.fileName }}" alt="Image de {{ service.nom }}" class="img-thumbnail mb-3" style="width: 300px; height: 300px; object-fit: cover;">
                </div>
            {% endif %}

            <div class="border rounded p-4 bg-light shadow-sm mb-4">
                {{ include('dashboard/service/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('dashboard_service_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste des services
                </a>

                {{ include('dashboard/service/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}


