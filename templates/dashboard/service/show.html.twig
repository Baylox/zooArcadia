{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center display-6 mb-4 text-primary fw-bold">Détails du Service</h1>

            <table class="table table-bordered table-striped shadow-sm">
                <tbody>
                    <tr>
                        <th scope="row" class="w-25">Nom</th>
                        <td>{{ service.nom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ service.description }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('dashboard_service_index') }}" class="btn btn-secondary me-auto">
                    <i class="fas fa-arrow-left"></i> Retour à la liste des services
                </a>

                <a href="{{ path('dashboard_service_edit', {'id': service.id}) }}" class="btn btn-primary mx-2">
                    <i class="fas fa-edit"></i> Modifier
                </a>

                {{ include('dashboard/service/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}



