{% extends 'base.html.twig' %}

{% block title %}Index des Rapports et Alimentation{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    <h1 class="text-center display-6 mb-4 text-primary fw-bold">Liste des Rapports et Alimentation</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Titre du Rapport</th>
                    <th>Date du Rapport</th>
                    <th>Animal</th>
                    <th>Nom de la Nourriture</th>
                    <th>Quantité (kg)</th>
                    <th>Commentaire Vétérinaire</th>
                    <th>Rédacteur</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for rapport in pagination %}
                    <tr>
                        <td class="align-middle">{{ rapport.titre }}</td>
                        <td class="align-middle">{{ rapport.dateRapport ? rapport.dateRapport|date('Y-m-d') : '' }}</td>
                        <td class="align-middle">{{ rapport.animal ? rapport.animal.prenom : 'Pas d\'animal associé' }}</td>
                        <td class="align-middle">{{ rapport.alimentation ? rapport.alimentation.nomNourriture : 'Pas d\'alimentation' }}</td>
                        <td class="align-middle">{{ rapport.alimentation ? rapport.alimentation.quantiteNourriture : 'Non spécifié' }}</td>
                        <td class="align-middle">{{ rapport.alimentation ? rapport.alimentation.commentaireVeterinaire : 'Aucun commentaire' }}</td>
                        <td class="align-middle">{{ rapport.utilisateur ? rapport.utilisateur.prenom ~ ' ' ~ rapport.utilisateur.nom : 'Non assigné' }}</td>
                        <td class="align-middle text-center">
                            <a href="{{ path('dashboard_rapport_show', {'id': rapport.id}) }}" class="btn btn-secondary btn-sm" data-toggle="tooltip" title="Voir">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('dashboard_rapport_edit', {'id': rapport.id}) }}" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('dashboard_alimentation_new') }}" class="btn btn-dark">
            <i class="fas fa-plus"></i> Ajouter une Nouvelle Alimentation
        </a>
        <a href="{{ path('dashboard_rapport_new') }}" class="btn btn-dark">
            <i class="fas fa-plus"></i> Créer un Nouveau Rapport
        </a>
    </div>
    
    <div class="d-flex justify-content-center mt-4">
        <nav>
            <ul class="pagination">
                {% if pagination.currentPageNumber > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pagination.currentPageNumber - 1})) }}">Précédent</a>
                    </li>
                {% endif %}

                {% for page in 1..pagination.pageCount %}
                    <li class="page-item {{ page == pagination.currentPageNumber ? 'active' : '' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': page})) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if pagination.currentPageNumber < pagination.pageCount %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pagination.currentPageNumber + 1})) }}">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_dash_admin') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard
        </a>
    </div>
{% endblock %}






