{% extends 'base.html.twig' %}

{% block title %}Rapport{% endblock %}

{% block body %}
    <h1>Rapport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rapport.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ rapport.titre }}</td>
            </tr>
            <tr>
                <th>Date du Rapport</th>
                <td>{{ rapport.dateRapport ? rapport.dateRapport|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Détails</th>
                <td>{{ rapport.details }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rapport_index') }}">Retour à la liste</a>

    <a href="{{ path('app_rapport_edit', {'id': rapport.id}) }}">Modifier</a>

    {{ include('rapport/_delete_form.html.twig') }}
{% endblock %}
