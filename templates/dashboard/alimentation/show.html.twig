{% extends 'base.html.twig' %}

{% block title %}Détails de l'Alimentation{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center display-6 mb-4 text-primary fw-bold">Détails de l'Alimentation</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-striped shadow-sm">
            <tbody>
                <tr>
                    <th>Nom de la Nourriture</th>
                    <td>{{ alimentation.nomNourriture }}</td>
                </tr>
                <tr>
                    <th>Quantité de Nourriture</th>
                    <td>{{ alimentation.quantiteNourriture }}</td>
                </tr>
                <tr>
                    <th>Commentaire du Vétérinaire</th>
                    <td>{{ alimentation.commentaireVeterinaire }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('dashboard_alimentation_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        
        <a href="{{ path('dashboard_alimentation_edit', {'id': alimentation.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Modifier
        </a>
        
        {{ include('dashboard/alimentation/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

