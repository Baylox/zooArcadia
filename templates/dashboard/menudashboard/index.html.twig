{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="admin-dashboard-header text-center mb-5 text-primary fw-bold">Tableau de bord employé</h2>
            <div class="admin-list-group list-group">
                <a href="{{ path('dashboard_animal_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-animal-list">
                    <span>Tableau de Bord des Animaux</span>
                    <i class="fas fa-paw"></i>
                </a>
                <a href="{{ path('dashboard_rapport_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-report-list">
                    <span>Tableau de Bord des Rapports</span>
                    <i class="fas fa-file-alt"></i>
                </a>
                <a href="{{ path('dashboard_alimentation_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-food-list">
                    <span>Tableau de l'Alimentation des Animaux</span>
                    <i class="fas fa-utensils"></i>
                </a>
                <a href="{{ path('dashboard_habitat_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-habitat-list">
                    <span>Tableau de Bord des Habitats</span>
                    <i class="fas fa-tree"></i>
                </a>
                <a href="{{ path('dashboard_avis') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-avis-list">
                    <span>Gestion des Avis</span>
                    <i class="fas fa-comments"></i>
                </a>
                <a href="{{ path('dashboard_service_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-service-list">
                    <span>Tableau de Bord des Services</span>
                    <i class="fas fa-briefcase"></i>
                </a>
                <a href="{{ path('horaire_index') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center admin-horaire-list">
                    <span>Gestion des Horaires</span>
                    <i class="fas fa-clock"></i>
                </a>
            </div>
            <div class="text-center mt-4">
                <small class="text-muted">Accédez aux différentes sections pour gérer le contenu du site.</small>
            </div>
        </div>
    </div>
</div>
{% endblock %}
