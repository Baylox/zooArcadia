{% extends 'base.html.twig' %}

{% block title %}Habitat{% endblock %}

{% block body %}
    <h1 class="display-4 text-center">{{ habitat.nom }}</h1>

    <div class="d-flex justify-content-end gap-2 mb-3">
        <a href="{{ path('dashboard_habitat_index') }}" class="btn btn-secondary">
            <i class="fas fa-list"></i> Retour Ã  la liste
        </a>
        <a href="{{ path('dashboard_habitat_edit', {'id': habitat.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Modifier
        </a>
        {{ include('dashboard/habitat/_delete_form.html.twig', { 'button_label': '<i class="fas fa-trash-alt"></i> Supprimer' }) }}
    </div>

    <table class="table table-striped">
        <tbody>
            {% for label, value in {
                'Nom': habitat.nom,
                'Description': habitat.description,
                'Type d\'Habitat': habitat.typeHabitat
            } %}
                <tr>
                    <th>{{ label }}</th>
                    <td>{{ value }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}


