{{ form_start(form) }}
    
    {% if habitat.imageFilename %}
        <div class="mt-3">
            <img src="{{ asset('uploads/images/' ~ habitat.imageFilename) }}" alt="{{ habitat.nom }}" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
        </div>
    {% endif %}
    
    {{ form_widget(form) }}
    <button class="btn btn-dark">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
