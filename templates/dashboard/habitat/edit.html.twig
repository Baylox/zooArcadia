{% extends 'base.html.twig' %}

{% block title %}Modifier Habitat{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center display-6 mb-4 text-primary fw-bold">Modifier Habitat</h1>

    {% if habitat.images|length > 0 %}
        <div class="d-flex flex-column align-items-center mb-4">
            <img src="/uploads/habitats_image/{{ habitat.images|first.fileName }}" alt="Image de {{ habitat.nom }}" class="img-thumbnail mb-3" style="width: 300px; height: 300px; object-fit: cover;">
        </div>
    {% endif %}

    {{ include('dashboard/habitat/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('dashboard_habitat_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        {{ include('dashboard/habitat/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
