{% extends 'base.html.twig' %}

{% block title %}Liste de toutes les images{% endblock %}

{% block body %}
    <h1>Liste de toutes les images</h1>
        {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}
    <div class="card-gallery">
        {% for image in images %}
            <div class="card">
                <div class="card-image">
                    <img src="/uploads/animaux_image/{{ image.fileName }}" alt="Image {{ image.id }}" class="card-img"/>
                </div>
                <div class="card-content">
                    <a href="{{ path('image_confirm_delete', {'id': image.id}) }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        {% else %}
            <p>Aucune image trouv√©e.</p>
        {% endfor %}
    </div>
{% endblock %}



