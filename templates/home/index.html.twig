{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    {# Inclure le composant hero en dehors du conteneur pour qu'il prenne toute la largeur #}
    {% include '_partials/_hero.html.twig' with {
        intro_text: 'Bienvenue au Zoo Arcadia',
        title: 'Découvrez la faune sauvage',
        button_text: 'En savoir plus',
        button_link: path('app_service') 
    } %}

    <div class="container">
        <h1>Bienvenue au Zoo Arcadia</h1>
        <p>Découvrez nos horaires d'ouverture :</p>
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Jour</th>
                    <th>Heure d'ouverture</th>
                    <th>Heure de fermeture</th>
                </tr>
            </thead>
            <tbody>
                {% for horaire in horaires %}
                    <tr>
                        <td>{{ horaire.jour }}</td>
                        <td>{{ horaire.heureOuverture|date('H:i') }}</td>
                        <td>{{ horaire.heureFermeture|date('H:i') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

