{% extends 'base.html.twig' %}

{% block title %}Soumettre un Avis{% endblock %}

{% block body %}
    {% include '_partials/_hero.html.twig' with {
        intro_text: 'Votre avis compte pour nous',
        title: 'Partagez votre exp√©rience',
    } %}

    <div class="container my-5">
        <h1 class="mb-4 text-center"><i class="fas fa-comment-dots"></i> Soumettre un Avis</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
                {{ form_label(form.pseudo, 'Pseudo', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    {{ form_widget(form.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Votre pseudo'}}) }}
                </div>
                <div class="invalid-feedback">
                    {{ form_errors(form.pseudo) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-comments"></i></span>
                    </div>
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'placeholder': 'Votre commentaire'}}) }}
                </div>
                <div class="invalid-feedback">
                    {{ form_errors(form.commentaire) }}
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-paper-plane"></i> Envoyer</button>
            </div>
        {{ form_end(form) }}

        {% if app.session.flashBag.has('avis_submitted') %}
            <div class="alert alert-success mt-4 text-center">
                {% for message in app.session.flashBag.get('avis_submitted') %}
                    <p class="mb-0"><i class="fas fa-check-circle"></i> {{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}



