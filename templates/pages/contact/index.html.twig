{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    {% include '_partials/_hero.html.twig' with {
        intro_text: 'Une question ? Une suggestion ?',
        title: 'Contactez notre Ã©quipe',
    } %}

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="bg-light p-4 rounded shadow">
                    <h1 class="text-center text-primary mb-4">
                        <i class="fas fa-envelope"></i> Formulaire de Contact
                    </h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <!-- Titre -->
                        <div class="mb-3">
                            {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label text-primary fw-bold'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Votre titre'}}) }}
                            {% for error in form.titre.vars.errors %}
                                <div class="alert alert-danger mt-1">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label text-primary fw-bold'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Dites-nous tout'}}) }}
                            {% for error in form.description.vars.errors %}
                                <div class="alert alert-danger mt-1">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <!-- Adresse email -->
                        <div class="mb-3">
                            {{ form_label(form.email, 'Votre adresse email', {'label_attr': {'class': 'form-label text-primary fw-bold'}}) }}
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white"><i class="fas fa-envelope"></i></span>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@zooarcadia.fr'}}) }}
                            </div>
                            {% for error in form.email.vars.errors %}
                                <div class="alert alert-danger mt-1">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <!-- Bouton d'envoi -->
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> Envoyer
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
